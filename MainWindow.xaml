<Window x:Class="SC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Scan Card" Width="100" Height="30" Click="ScanCardButton_Click" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Style="{DynamicResource MaterialDesignRaisedButton}"/>

        <TextBox Name="FrontImg" Width="300" Height="100" 
                 HorizontalAlignment="Center" VerticalAlignment="Top" 
                 IsReadOnly="True" Margin="0,288,0,0"/>
        <TextBox Name="BackImg" Width="300" Height="100" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 IsReadOnly="True" Margin="500,288,0,0"/>
        <TextBox Name="MRZCode" Width="300" Height="100" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                IsReadOnly="True" Margin="27,288,0,0"/>


    </Grid>
</Window>
